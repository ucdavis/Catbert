                    </security>
                </binding>
            </basicHttpBinding>
        </bindings>
        <client>
            <endpoint address="http://localhost:1772/Catbert.Web/Services/CatbertWebService.asmx"
                binding="basicHttpBinding" bindingConfiguration="CatbertWebServiceSoap"
