<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
  <class
    name="CAESDO.Catbert.Core.Domain.Tracking, CAESDO.Catbert.Core"
    table="Tracking" >
    <id name="ID" access="nosetter.lowercase" column="TrackingID" unsaved-value="0">
      <generator class="identity" />
    </id>
    
    <property name="UserName" column="TrackingUserName" />
    <property name="ActionDate" column="TrackingActionDate" />
    <property name="Comments" column="Comments" />

    <many-to-one name="Type" column="TrackingTypeID"
      class="CAESDO.Catbert.Core.Domain.TrackingType, CAESDO.Catbert.Core" not-null="true" />

    <many-to-one name="Action" column="TrackingActionID"
      class="CAESDO.Catbert.Core.Domain.TrackingAction, CAESDO.Catbert.Core" not-null="true" />
    
  </class>

  <class
    name="CAESDO.Catbert.Core.Domain.TrackingType, CAESDO.Catbert.Core"
    table="TrackingTypes" >
    <id name="ID" access="nosetter.lowercase" column="TrackingTypeID" unsaved-value="0">
      <generator class="identity" />
    </id>

    <property name="Name" column="TrackingType" />

  </class>

  <class
    name="CAESDO.Catbert.Core.Domain.TrackingAction, CAESDO.Catbert.Core"
    table="TrackingActions" >
    <id name="ID" access="nosetter.lowercase" column="TrackingActionID" unsaved-value="0">
      <generator class="identity" />
    </id>

    <property name="Name" column="TrackingAction" />

  </class>
</hibernate-mapping>