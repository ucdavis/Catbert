<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
  <class
    name="CAESDO.Catbert.Core.Domain.Application, CAESDO.Catbert.Core"
    table="Applications" >
    <id name="ID" access="nosetter.lowercase" column="ApplicationID" unsaved-value="0">
      <generator class="identity" />
    </id>
    
    <property name="Name" column="Name" />
    <property name="Abbr" column="Abbr" />
    <property name="Location" column="Location" />
    <property name="WebServiceHash" column="WebServiceHash" />
    <property name="Salt" column="Salt"></property>
    <property name="Inactive" column="Inactive"></property>

    <!--<bag name="Roles" table="ApplicationRoles" inverse="false">
      <key column="ApplicationID" />
      <many-to-many column="RoleID" class="CAESDO.Catbert.Core.Domain.Role, CAESDO.Catbert.Core" />
    </bag>-->
    
    <bag name="ApplicationRoles" table="ApplicationRoles" cascade="all-delete-orphan" inverse="true">
      <key column="ApplicationID" />
      <one-to-many class="CAESDO.Catbert.Core.Domain.ApplicationRole, CAESDO.Catbert.Core" />
    </bag>
  
  </class>
</hibernate-mapping>